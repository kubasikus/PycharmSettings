<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="16" />
  </component>
  <component name="TodoConfiguration">
    <pattern useCustomColors="true" pattern="\btodo\b.*">
      <option name="FOREGROUND" value="ff1713" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
    <pattern pattern="\bfixme\b.*" />
    <pattern useCustomColors="true" pattern="\bdone\b.*">
      <option name="FOREGROUND" value="31ff2e" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
  </component>
</application>